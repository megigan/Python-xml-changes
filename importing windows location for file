>>> import os

// show username
>>> os.environ["USERPROFILE"]
'C:\Users\ShiftyByte'


// join the directory
>>> os.path.join(os.environ["USERPROFILE"], "full path here")
'C:\Users\ShiftyByte\Desktop'


//below to show listed directories
os.path.join(os.environ["USERPROFILE"], "full path here")

//save path in variable and print
current_working_directory = os.path.join(os.environ["USERPROFILE"], "full path here")
print(current_working_directory)



//Set path to run py files
setx path "%path%;C:\path\to\util.py"


